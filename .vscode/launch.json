    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/unit-partiton-pg.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Debug Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
