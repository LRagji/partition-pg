            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/perf-tests.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Debug Perf Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/e2e-tests.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Debug e2e Tests",
